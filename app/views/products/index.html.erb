<div class="container">
  <h3>商品一覧</h3><p>全<%= @products.count %>件</p>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm">
        <%= attachment_image_tag product, :image, format: 'jpeg', size: "70x70" %>
        <p><%= link_to product.name, product_path(product.id) %></p>
        <p><%= product.price %></p>
    <% end %>
    </div>
  </div>
</div>
