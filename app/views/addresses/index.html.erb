<div class="container">
  <h3>配送先登録/一覧</h3>
  <%= form_with model: @address, local: true do |f| %>
  <table>
    <tr>
      <div class="field">
        <th><%= f.label :郵便番号（ハイフンなし） %></th>
        <th><%= f.text_field :postal_code, class: "postal_code form-control" %></th>
      </div>
    </tr>
    <tr>
      <div class="field">
        <th><%= f.label :住所 %></th>
        <th colspan="2"><%= f.text_field :address, class: "address form-control" %></th>
      </div>
    </tr>
    <tr>
      <div class="field">
        <th><%= f.label :宛名 %></th>
       <th> <%= f.text_field :name, class: "name form-control" %></th>
      </div>
      <div class="actions">
        <th><%= f.submit "新規登録" ,class: 'btn btn-sm btn-success' %></th>
      </div>
    </tr>
    
  </table>
  <% end %>

  <div class="row">
    <dic class="col-lg-8 pt-5">
      <table class="table table-bordered bg-white">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th style="width: 40%">住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
              <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </dic>
  </div>

</div>