<div class="container">
  <h3>配送先登録/一覧</h3>
  <%= form_with model: @address, local: true do |f| %>
    <div class="field">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :postal_code, class: "postal_code" %>
    </div></br>
    <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :address, class: "address" %>
    </div></br>
    <div class="field">
      <%= f.label :宛名 %>
      <%= f.text_field :name, class: "name" %>
    </div></br>
    <div class="actions">
      <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success' %>
    </div>
  <% end %>


    <table class="table table-bordered">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
            <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

</div>