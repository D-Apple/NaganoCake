<div class="container">
  <h3>配送先編集</h3>
  <%= form_with model: @address, local: true do |f| %>
  <table>
    <tr>
      <div class="field">
        <th><%= f.label :郵便番号（ハイフンなし） %></th>
        <th><%= f.text_field :postal_code, class: "postal_code form-control" %></th>
      </div>
    </tr>
    <tr>
      <div class="field">
        <th><%= f.label :住所 %></th>
        <th><%= f.text_field :address, class: "address form-control" %></th>
      </div>
    </tr>
    <tr>
      <div class="field">
        <th><%= f.label :宛名 %></th>
        <th><%= f.text_field :name, class: "name form-control" %></th>
      </div>
    <tr>
      <div class="actions">
        <th><%= f.submit "変更内容を保存" ,class: 'btn btn-sm btn-success' %></th>
      </div>
    </tr>
  </table>
  <% end %>
</div>
