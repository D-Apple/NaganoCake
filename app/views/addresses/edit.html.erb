<div class="container">
  <h3>配送先編集</h3>
  <%= form_with model: @address, local: true do |f| %>
    <div class="field">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :postal_code, class: "postal_code" %>
    </div></br>
    <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :address, class: "address" %>
    </div></br>
    <div class="field">
      <%= f.label :宛名 %>
      <%= f.text_field :name, class: "name" %>
    </div></br>
    <div class="actions">
      <%= f.submit "変更内容を保存" ,class: 'btn btn-sm btn-success' %>
    </div>
  <% end %>
</div>
