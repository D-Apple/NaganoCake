<div class="container">
  <h5>注文履歴詳細</h5>
  <div class="row">
    <div class="col-sm">
      <p>注文情報</p>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>
              <%= @order.shipping_postal_code %></br>
              <%= @order.shipping_address %></br>
              <%= @order.shipping_name %>
            </td>
          </tr>
          <tr>
            <td>支払い方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td><%= @order.status %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-sm">
      <p>請求情報</p>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>商品合計</td>
            <td><%= @selling_price %></td>
          </tr>
          <tr>
            <td>配送料</td>
            <td><%= @order.delivery_price %></td>
          </tr>
          <tr>
            <td>ご請求額</td>
            <td><%= @order.total_price %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <p>注文内容</p>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込み）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
        <% @tax_included_price = (order_detail.selling_price).floor %>
        <tr>
          <td><%= order_detail.product.name %></td>
          <td><%= @tax_included_price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= @tax_included_price * order_detail.amount %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>