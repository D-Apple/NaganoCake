<div class="container"> 
  <div class="row">
    <div class="col-8">
      <h2>商品新規登録</h2>
      <%= form_with model: @product, url: admins_products_path, local: true do |f| %>
        <label class="product-image">商品画像</label>
        <%= f.attachment_field :image %><br>
        
        <label class="product-name">商品名</label>
        <%= f.text_field :name %><br>
        
        <label class="product-detail">商品説明</label>
        <%= f.text_area :introduction %><br>
        
        <label class="product-genre">ジャンル</label>
        <%= f.collection_select :genre_id, @genres, :id, :name %><br>
        
        <label class="product-price">税抜価格</label>
        <%= f.text_field :price %>円<br>
        
        <label class="product-status">販売ステータス</label>
        <%= f.label :is_status, '販売中' %>
        <%= f.radio_button :is_status, :true %>
        <%= f.label :is_status, '販売停止' %>
        <%= f.radio_button :is_status, :false %><br>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>  