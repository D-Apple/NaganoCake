<div class="container">
      <h2>ジャンル一覧・追加</h2>
      <%= form_with model: @genre, url: admins_genres_path, local: true do |f| %>
        <label for= "genre_name">ジャンル名</label>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      <% end %>
      
      <table class="table">
        <tr>
          <th>ジャンル</th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <th><%= genre.name %></th>
          <th><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-success" %></th>
        </tr>
        <% end %>
      </table>
</div>