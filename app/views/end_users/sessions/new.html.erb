<div class="container">
  <h2>ログイン</h2>
  <div class="container">
    <p>会員の方はこちらからログイン</p>
  
    <%= flash[:error] %>
    <%= form_with model: @end_user, url: end_user_session_path, local: true do |f| %>
    <div class="ml-5">
      <table>
        <div class="field">
          <tr>
            <th><%= f.label :メールアドレス %></th>
            <th width="75%"><%= f.email_field :email, autofocus: true, class: "email form-control", placeholder: "sample@example.com" %></th>
          </tr>
        </div>
        
        <div class="field">
          <tr>
            <th><%= f.label :パスワード %></th>
            <th><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></th>
          </tr>
        </div>
        
        <div class="actions">
          <tr>
            <th></th><th><%= f.submit "ログイン", class: "btn btn-success" %></th>
          </tr>
        </div>
      </table>
    </div>
    <% end %>
  
    <p>会員登録がお済みで無い方は</br>
    <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください</p>
  </div>
</div>
